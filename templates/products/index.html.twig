                            <h5 id="test">{{product.name}}</h5>
                            <span id="test1" class="product-subtitle">{{product.subtitle}}</span>
                            <span id="test2" class="product-price">{{(product.price / 100)|number_format(2, ",", ".")}} â‚¬</span>
                            
                        </div>
                    </div>
                {% endfor %}
            </div>
    </div>
</div>
    
{% endblock %}
