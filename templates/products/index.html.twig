{% extends 'base.html.twig' %}

{% block title %}Nos Produits - La Boutique Francaise{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <h3>Filtrer</h3>
        {{ form(form) }}
    </div>
    <div class="col-md-9">
        <h3>Nos Produits</h3>

            <div class="row product-container">
                {% for product in products %}
