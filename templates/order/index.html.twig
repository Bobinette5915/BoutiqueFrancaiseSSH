{% extends 'base.html.twig' %}

{% block title %}Ma commande- La boutique Francaise!
{% endblock %}

{% block content %}
	<h2>Je passe ma commande</h2>
	choississez vos preferences avant de valider la commande chez "La boutique Francaise"
	<hr>
	<div class="row">
		<div class="col-md-6">
			{% set formHtml %}
			{{ form_start(form, { action: path('app_order_recap') }) }}
			{{ form_label(form.adresses, ' Choississez votre adresse de livraison') }}
			<a href="{{ path('app_account_adress_add') }}">Ajouter une nouvelle Adresse</a>
			{{ form_end(form) }}

				{% endset %}
				{{ formHtml|replace({'[br]': '<br>'})|raw }}
			</div>
			<div class="col-md-6">
			<div class="text-center">
				<b>Recapitulatif de ma commande</b><br>
				<p>Retrouvez un Recapitulatif de vos produits</p>
			</div>
				
				<div class="order-sumary">
					{% for key,product in cart %}

						<div class="row {% if key > 0 %} mt-2 {% endif %}">
							<div class="col-md-2"><img src="/upload/images/{{product.product.illustration}}" alt="{{product.product.name}}" height='75px'>
							</div>
							<div class="col-md-8 my-auto">{{product.product.name}}
								<br>
								<small>{{product.product.subtitle}}</small>
							</div>
							<div class="col-md-2 my-auto">x
								{{product.quantity}}</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	{% endblock %}
